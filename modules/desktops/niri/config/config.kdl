prefer-no-csd

input {
  disable-power-key-handling // stop the power button from rebinding to sleep
  keyboard {
    xkb {
      layout "us"
      variant "colemak"
    }
  }
  touchpad {
    tap
    natural-scroll
    accel-profile "flat"
  }
  mouse {
    accel-profile "flat"
    accel-speed -0.4
  }
  mod-key "Super"
}

clipboard {
  disable-primary // disable middle-click paste
}
